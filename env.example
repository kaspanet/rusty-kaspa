# Rusty Kaspa Docker Configuration
# Copy this file to .env and modify as needed

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================

# Logging level for all nodes (off, error, warn, info, debug, trace)
LOG_LEVEL=INFO

# Enable UTXO index (required for wallet functionality)
ENABLE_UTXO_INDEX=true

# Enable performance metrics collection
ENABLE_PERF_METRICS=false

# Number of async threads (defaults to number of CPU cores if not set)
# ASYNC_THREADS=8

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================

# Target number of outbound peers
OUTBOUND_TARGET=8

# Maximum number of inbound peers
INBOUND_LIMIT=256

# Maximum number of RPC clients
RPC_MAX_CLIENTS=256

# =============================================================================
# wRPC PROXY CONFIGURATION
# =============================================================================

# wRPC encoding (borsh or serde-json)
WRPC_ENCODING=borsh

# Number of threads for wRPC proxy (defaults to CPU cores if not set)
# WRPC_THREADS=4

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana admin password
GRAFANA_PASSWORD=admin

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Disable UPnP port mapping
# DISABLE_UPNP=false

# Disable DNS seeding
# DISABLE_DNS_SEEDING=false

# Enable unsafe RPC commands
# UNSAFE_RPC=false

# Performance metrics interval in seconds
# PERF_METRICS_INTERVAL_SEC=10

# Block template cache lifetime in seconds
# BLOCK_TEMPLATE_CACHE_LIFETIME=30

# RAM scale factor for memory allocation bounds
# RAM_SCALE=1.0

# Database retention period in days
# RETENTION_PERIOD_DAYS=30

# =============================================================================
# PEER CONFIGURATION
# =============================================================================

# Add specific peers to connect to at startup
# ADD_PEERS=["peer1.example.com:16111", "peer2.example.com:16111"]

# Connect only to specified peers (disables DNS seeding)
# CONNECT_PEERS=["peer1.example.com:16111", "peer2.example.com:16111"]

# =============================================================================
# EXTERNAL ACCESS CONFIGURATION
# =============================================================================

# External IP address (for NAT traversal)
# EXTERNAL_IP=1.2.3.4

# User agent comments
# USER_AGENT_COMMENTS=["docker", "rusty-kaspa"]

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable RPC over TLS (requires certificates)
# ENABLE_RPC_TLS=false

# RPC certificate file path
# RPC_CERT_FILE=/app/config/rpc.cert

# RPC key file path
# RPC_KEY_FILE=/app/config/rpc.key

# =============================================================================
# MINING CONFIGURATION (if using CPU miner)
# =============================================================================

# Enable unsynced mining
# ENABLE_UNSYNCED_MINING=false

# Enable mainnet mining
# ENABLE_MAINNET_MINING=true

# Mining address
# MINING_ADDRESS=kaspa:qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Enable development features (devnet only)
# ENABLE_DEVNET_FEATURES=false

# Number of preallocated UTXOs (devnet only)
# NUM_PREALLOC_UTXOS=1000

# Preallocated address (devnet only)
# PREALLOC_ADDRESS=kaspa:qqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq

# Preallocated amount in sompi (devnet only)
# PREALLOC_AMOUNT=10000000000

# =============================================================================
# DOCKER SPECIFIC CONFIGURATION
# =============================================================================

# Docker Compose project name
COMPOSE_PROJECT_NAME=rusty-kaspa

# Docker Compose file override
# COMPOSE_FILE=docker-compose.yml:docker-compose.override.yml

# =============================================================================
# VOLUME CONFIGURATION
# =============================================================================

# Data directory path (relative to project root)
# DATA_DIR=./docker-data

# Log directory path (relative to project root)
# LOG_DIR=./docker-logs

# Config directory path (relative to project root)
# CONFIG_DIR=./docker-config 