cargo fmt --all
cargo clippy

declare -a crates=(
    "kaspa-wrpc-wasm"
    "kaspa-wallet-cli-wasm"
    "kaspa-wasm"
)

for crate in "${crates[@]}"
do
    echo -e "\ncargo clippy -p $crate --target wasm32-unknown-unknown"
    cargo clippy -p $crate --target wasm32-unknown-unknown
    status=$?
    if [ $status -ne 0 ]; then
        echo -e "\n--> wasm32 check of $crate failed\n"
        exit $status
    fi
done